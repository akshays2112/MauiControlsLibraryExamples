<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:MauiControlsLibrary;assembly=MauiControlsLibrary"
             x:Class="MauiControlsLibraryExamples.MainPage">

    <ScrollView>
        <StackLayout>
            <customControls:MCCLLabel x:Name="TestLabel1" WidthRequest="200" HeightRequest="50" LabelText="TestLabel1" />
            <customControls:MCCLButton x:Name="TestButton1" WidthRequest="200" HeightRequest="50" ButtonText="TestButton1" OnMCCLButtonTapped="TestButton1_OnMCCLButtonTapped" />
            <customControls:MCCLListbox x:Name="TestListbox1" WidthRequest="200" HeightRequest="250" OnMCCLListboxTapped="TestListbox1_OnMCCLListboxTapped" />
        </StackLayout>
    </ScrollView>

</ContentPage>
